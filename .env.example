# ===========================================
# Yun AI TodoList 环境变量配置模板
# ===========================================

# 应用环境
NODE_ENV=development
PORT=3000

# 前端应用地址
FRONTEND_URL=http://localhost:5173

# ===========================================
# 数据库配置
# ===========================================

# PostgreSQL 数据库连接
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/yun_ai_todolist

# 数据库连接池配置
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===========================================
# Redis 配置 (可选)
# ===========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT 认证配置
# ===========================================

# JWT 访问令牌密钥 (生产环境请使用强密钥)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT 访问令牌过期时间
JWT_EXPIRES_IN=1h

# JWT 刷新令牌密钥 (生产环境请使用强密钥)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# JWT 刷新令牌过期时间
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# 密码加密配置
# ===========================================

# bcrypt 加密轮数 (生产环境建议 12-15)
BCRYPT_ROUNDS=12

# ===========================================
# 文件上传配置
# ===========================================

# 上传文件大小限制 (字节)
MAX_FILE_SIZE=10485760

# 上传文件存储路径
UPLOAD_PATH=./uploads

# ===========================================
# 限流配置
# ===========================================

# 请求频率限制 (每分钟请求数)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 日志文件路径
LOG_FILE_PATH=./logs

# ===========================================
# AI 服务配置 (可选)
# ===========================================

# OpenAI API 配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# DeepSeek API 配置
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# ===========================================
# 搜索服务配置 (可选)
# ===========================================

# Google Search API
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# Bing Search API
BING_SEARCH_API_KEY=your-bing-search-api-key

# ===========================================
# 邮件服务配置 (可选)
# ===========================================

# SMTP 配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 发件人信息
MAIL_FROM_NAME=Yun AI TodoList
MAIL_FROM_ADDRESS=noreply@yourdomain.com

# ===========================================
# 监控和分析配置 (可选)
# ===========================================

# Sentry 错误监控
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id

# ===========================================
# 安全配置
# ===========================================

# CORS 允许的源
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# 信任的代理
TRUSTED_PROXIES=127.0.0.1,::1

# ===========================================
# 开发工具配置
# ===========================================

# 是否启用 Swagger 文档 (生产环境建议关闭)
ENABLE_SWAGGER=true

# 是否启用调试模式
DEBUG_MODE=false

# ===========================================
# Docker 配置
# ===========================================

# Docker 容器名称前缀
DOCKER_PREFIX=yun-todolist

# Docker 网络名称
DOCKER_NETWORK=yun-todolist-network
