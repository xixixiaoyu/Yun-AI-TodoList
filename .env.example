# ===========================================
# Yun AI TodoList 精简版环境配置
# ===========================================

# 应用环境
NODE_ENV=development
PORT=3000

# 前端应用地址
FRONTEND_URL=http://localhost:5173



# Docker 环境配置
DOCKER_ENV=false
DATABASE_HOST=localhost

# ===========================================
# 数据库配置 (使用 DATABASE_URL 即可)
# ===========================================
DATABASE_URL=postgresql://yun_todo_user:postgres123@localhost:5432/yun_todo_db

# ===========================================
# Redis 配置 (可选)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ===========================================
# JWT 认证配置
# ===========================================
JWT_SECRET=yun-todo-dev-jwt-secret-key-2025-for-development-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=yun-todo-dev-refresh-secret-key-2025-for-development-only
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# 密码加密配置
# ===========================================
BCRYPT_ROUNDS=12

# ===========================================
# 其他重要配置
# ===========================================
# 日志级别
LOG_LEVEL=debug

# AI 服务配置 (可选)
OPENAI_API_KEY=your-openai-api-key
DEEPSEEK_API_KEY=your-deepseek-api-key
CLAUDE_API_KEY=your_claude_api_key_here

# ===========================================
# 前端配置 (Vite 会自动加载以 VITE_ 开头的变量)
# ===========================================
VITE_API_BASE_URL=http://localhost:3000/api/v1

# ===========================================
# 七牛云 AccessKey (从控制台密钥管理获取)
QINIU_ACCESS_KEY=your_qiniu_access_key_here

# 七牛云 SecretKey (从控制台密钥管理获取)
QINIU_SECRET_KEY=your_qiniu_secret_key_here

# 七牛云存储空间名称
QINIU_BUCKET=your_bucket_name

# 七牛云 CDN 域名 (测试域名或自定义域名)
QINIU_DOMAIN=your_cdn_domain.com

# 七牛云存储区域 (用于 S3 兼容 API)
QINIU_REGION=cn-east-1

# 七牛云 S3 端点 (用于 S3 兼容 API)
QINIU_ENDPOINT=s3-cn-east-1.qiniucs.com

# 七牛云冗余文件保留天数 (可选，默认 7 天)
QINIU_RETENTION_DAYS=7


# ===========================================
# 邮件服务配置 (可选)
# ===========================================

# SMTP 配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 发件人信息
MAIL_FROM_NAME=Yun AI TodoList
MAIL_FROM_ADDRESS=noreply@yourdomain.com
# SMTP_FROM 已合并到 MAIL_FROM_ADDRESS，避免重复配置
