{
  "name": "frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Vue 3 frontend for Yun AI TodoList",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3001",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "landing:dev": "vite --config vite.landing.config.ts",
    "landing:build": "vue-tsc && vite build --config vite.landing.config.ts",
    "landing:preview": "vite preview --config vite.landing.config.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run src/test/integration --reporter=verbose",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=junit --outputFile=test-results.xml",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:fix": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,css,scss,vue,html,md}\" --ignore-unknown",
    "type-check": "vue-tsc --noEmit",
    "clean": "rimraf dist",
    "electron:serve": "concurrently \"vite --port 3000\" \"wait-on tcp:3000 && cross-env NODE_ENV=development ELECTRON_START_URL=http://localhost:3000 electron ../../electron/main.js\"",
    "electron:dev": "pnpm run electron:serve",
    "mobile:build": "vite build && cap sync",
    "mobile:android": "cap open android",
    "mobile:ios": "cap open ios",
    "mobile:run:android": "cap run android",
    "mobile:run:ios": "cap run ios",
    "mobile:sync": "cap sync",
    "mobile:sync:android": "cap sync android",
    "mobile:sync:ios": "cap sync ios"
  },
  "dependencies": {
    "@capacitor/core": "6.1.2",
    "@capacitor/filesystem": "6.0.1",
    "@capacitor/haptics": "6.0.2",
    "@capacitor/preferences": "6.0.2",
    "@capacitor/splash-screen": "6.0.2",
    "@capacitor/status-bar": "6.0.1",
    "@capacitor/toast": "6.0.2",
    "@types/lodash-es": "4.17.12",
    "@vueuse/core": "13.3.0",
    "@vueuse/integrations": "13.3.0",
    "@yun-ai-todolist/shared": "workspace:*",
    "canvas-confetti": "1.9.3",
    "chart.js": "4.4.9",
    "date-fns": "4.1.0",
    "dompurify": "3.2.6",
    "highlight.js": "11.11.1",
    "lodash-es": "4.17.21",
    "mammoth": "1.9.1",
    "marked": "15.0.12",
    "mermaid": "11.6.0",
    "pdfjs-dist": "5.3.31",
    "sortablejs": "1.15.6",
    "vue": "3.5.16",
    "vue-i18n": "11.1.5",
    "vue-router": "4.5.1",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@capacitor/android": "6.1.2",
    "@capacitor/cli": "6.1.2",
    "@capacitor/ios": "6.1.2",
    "@eslint/js": "9.28.0",
    "@iconify-json/carbon": "1.2.9",
    "@types/sortablejs": "1.15.8",
    "@typescript-eslint/eslint-plugin": "8.34.0",
    "@typescript-eslint/parser": "8.34.0",
    "@unocss/preset-attributify": "66.2.0",
    "@unocss/preset-icons": "66.2.0",
    "@unocss/preset-typography": "66.2.0",
    "@unocss/preset-uno": "66.2.0",
    "@unocss/preset-web-fonts": "66.2.0",
    "@unocss/transformer-directives": "66.2.0",
    "@unocss/transformer-variant-group": "66.2.0",
    "@vitejs/plugin-vue": "5.2.4",
    "@vitest/coverage-v8": "3.2.3",
    "@vue/cli-service": "5.0.8",
    "@vue/test-utils": "2.4.6",
    "@yun-ai-todolist/typescript-config": "workspace:*",
    "chartjs-chart-matrix": "3.0.0",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "electron": "36.4.0",
    "electron-builder": "26.0.12",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-vue": "10.2.0",
    "jsdom": "26.1.0",
    "playwright": "1.53.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "typescript": "5.8.3",
    "unocss": "66.2.0",
    "unplugin-auto-import": "19.3.0",
    "vite": "6.3.5",
    "vite-plugin-pwa": "1.0.0",
    "vitest": "3.2.3",
    "vue-cli-plugin-electron-builder": "2.1.1",
    "vue-eslint-parser": "10.1.3",
    "vue-tsc": "2.2.10",
    "wait-on": "8.0.3",
    "workbox-window": "7.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
