{
  "name": "front-end",
  "private": true,
  "version": "0.0.0",
  "description": "A Todo application built with Vue 3 and Electron",
  "license": "GPL-3.0-only",
  "author": {
    "name": "yunmu"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:check": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:fix": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,css,scss,vue,html,md}\" --ignore-unknown",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,css,scss,vue,html,md}\" --ignore-unknown",
    "format:staged": "prettier --write --ignore-unknown",
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "quality": "pnpm run lint:check && pnpm run format:check && pnpm run type-check",
    "quality:fix": "pnpm run lint:fix && pnpm run format",
    "pre-commit": "lint-staged",
    "pre-commit:full": "COMMIT_CHECK_LEVEL=full ./scripts/smart-pre-commit.sh",
    "pre-commit:fast": "COMMIT_CHECK_LEVEL=fast ./scripts/smart-pre-commit.sh",
    "commit:safe": "pnpm run quality:fix && git add . && git commit",
    "prepare": "husky",
    "electron:serve": "vite --port 3000 & wait-on tcp:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "electron:build:mac": "pnpm run clean && vite build && electron-builder --config electron-builder.config.js --mac",
    "electron:build:win": "pnpm run clean && vite build && electron-builder --config electron-builder.config.js --win",
    "electron:build:linux": "pnpm run clean && vite build && electron-builder --config electron-builder.config.js --linux",
    "electron:build:all": "pnpm run clean && vite build && electron-builder --config electron-builder.config.js --all",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "clean": "rimraf dist release"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix --no-error-on-unmatched-pattern"
    ],
    "*.{css,less,scss}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{json,md}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "@vueuse/core": "^11.1.0",
    "@vueuse/integrations": "^11.1.0",
    "canvas-confetti": "^1.9.3",
    "chart.js": "^4.4.4",
    "chartjs-chart-matrix": "^2.0.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.1.7",
    "highlight.js": "^11.10.0",
    "lodash-es": "^4.17.21",
    "marked": "^14.1.2",
    "sortablejs": "^1.15.3",
    "vue": "^3.5.12",
    "vue-draggable-next": "^2.2.1",
    "vue-i18n": "^11.0.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vue/cli-service": "^5.0.8",
    "@vue/test-utils": "^2.4.5",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.5.3",
    "vite": "^5.4.10",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^1.4.0",
    "vue-cli-plugin-electron-builder": "^2.1.1",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.29",
    "wait-on": "^8.0.1",
    "workbox-window": "^7.3.0"
  },
  "main": "electron/main.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
