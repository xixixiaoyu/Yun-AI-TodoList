{
  "name": "front-end",
  "private": true,
  "version": "0.0.0",
  "description": "A Todo application built with Vue 3 and Electron",
  "license": "GPL-3.0-only",
  "author": {
    "name": "yunmu"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run src/test/integration --reporter=verbose",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=junit --outputFile=test-results.xml",
    "test:debug": "vitest --inspect-brk --no-coverage",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:check": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:fix": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,css,scss,vue,html,md}\" --ignore-unknown",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,css,scss,vue,html,md}\" --ignore-unknown",
    "format:staged": "prettier --write --ignore-unknown",
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "quality": "pnpm run lint:check && pnpm run format:check && pnpm run type-check",
    "quality:fix": "pnpm run lint:fix && pnpm run format",
    "quality:check": "node scripts/quality-check.js",
    "quality:enhanced": "eslint src --config .eslintrc.quality.js",
    "pre-commit": "lint-staged",
    "pre-commit:full": "COMMIT_CHECK_LEVEL=full ./scripts/smart-pre-commit.sh",
    "pre-commit:fast": "COMMIT_CHECK_LEVEL=fast ./scripts/smart-pre-commit.sh",
    "commit:safe": "pnpm run quality:fix && git add . && git commit",
    "prepare": "husky",
    "electron:serve": "concurrently \"vite --port 3000\" \"wait-on tcp:3000 && cross-env NODE_ENV=development ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "electron:dev": "pnpm run electron:serve",
    "electron:build": "cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ node scripts/build-electron.js mac",
    "electron:build:mac": "cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ node scripts/build-electron.js mac",
    "electron:build:win": "cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ node scripts/build-electron.js win",
    "electron:build:linux": "cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ node scripts/build-electron.js linux",
    "electron:build:all": "cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ node scripts/build-electron.js all",
    "electron:dist": "pnpm run electron:build:all",
    "electron:verify": "node scripts/verify-electron-config.js",
    "eslint:test": "node scripts/test-eslint-fix.js",
    "icons:generate": "./scripts/generate-icons.sh",
    "build:verify": "node scripts/verify-build-fix.js",
    "build:analyze": "vite build --mode analyze",
    "build:report": "vite build && npx vite-bundle-analyzer dist",
    "perf:benchmark": "node scripts/performance-benchmark.js",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "clean": "rimraf dist release",
    "mobile:build": "vite build && cap sync",
    "mobile:android": "cap open android",
    "mobile:ios": "cap open ios",
    "mobile:run:android": "cap run android",
    "mobile:run:ios": "cap run ios",
    "mobile:sync": "cap sync",
    "mobile:sync:android": "cap sync android",
    "mobile:sync:ios": "cap sync ios"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix --no-error-on-unmatched-pattern"
    ],
    "*.{css,less,scss}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{json,md}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@capacitor/core": "6.1.2",
    "@capacitor/filesystem": "6.0.1",
    "@capacitor/haptics": "6.0.2",
    "@capacitor/preferences": "6.0.2",
    "@capacitor/splash-screen": "6.0.2",
    "@capacitor/status-bar": "6.0.1",
    "@capacitor/toast": "6.0.2",
    "@types/lodash-es": "4.17.12",
    "@vueuse/core": "13.3.0",
    "@vueuse/integrations": "13.3.0",
    "canvas-confetti": "1.9.3",
    "chart.js": "4.4.9",
    "date-fns": "4.1.0",
    "dompurify": "3.2.6",
    "highlight.js": "11.11.1",
    "lodash-es": "4.17.21",
    "marked": "15.0.12",
    "vue": "3.5.16",
    "vue-i18n": "11.1.5",
    "vue-router": "4.5.1"
  },
  "devDependencies": {
    "@capacitor/android": "6.1.2",
    "@capacitor/cli": "6.1.2",
    "@capacitor/ios": "6.1.2",
    "@eslint/js": "9.28.0",
    "@typescript-eslint/eslint-plugin": "8.34.0",
    "@typescript-eslint/parser": "8.34.0",
    "@unocss/preset-attributify": "66.2.0",
    "@unocss/preset-icons": "66.2.0",
    "@unocss/preset-typography": "66.2.0",
    "@unocss/preset-uno": "66.2.0",
    "@unocss/preset-web-fonts": "66.2.0",
    "@unocss/transformer-directives": "66.2.0",
    "@unocss/transformer-variant-group": "66.2.0",
    "@vitejs/plugin-vue": "5.2.4",
    "@vitest/coverage-v8": "3.2.3",
    "@vue/cli-service": "5.0.8",
    "@vue/test-utils": "2.4.6",
    "canvas": "3.1.0",
    "chartjs-chart-matrix": "3.0.0",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "electron": "36.4.0",
    "electron-builder": "26.0.12",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-vue": "10.2.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "typescript": "5.8.3",
    "unocss": "66.2.0",
    "unplugin-auto-import": "19.3.0",
    "vite": "6.3.5",
    "vite-plugin-pwa": "1.0.0",
    "vitest": "3.2.3",
    "vue-cli-plugin-electron-builder": "2.1.1",
    "vue-eslint-parser": "10.1.3",
    "vue-tsc": "2.2.10",
    "wait-on": "8.0.3",
    "workbox-window": "7.3.0"
  },
  "main": "electron/main.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
