{
  "name": "yun-ai-todolist",
  "private": true,
  "version": "1.0.0",
  "description": "A full-stack AI-powered Todo application with Vue 3 frontend and NestJS backend",
  "license": "GPL-3.0-only",
  "author": {
    "name": "yunmu"
  },
  "type": "module",
  "main": "electron/main.js",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:all": "concurrently \"pnpm dev:backend\" \"pnpm dev\"",
    "build": "pnpm --filter shared build && pnpm --filter frontend build && pnpm --filter backend build",
    "build:shared": "pnpm --filter shared build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:verify": "./scripts/build-and-verify.sh",
    "test": "pnpm --recursive test",
    "test:frontend": "pnpm --filter frontend test",
    "test:backend": "pnpm --filter backend test",
    "lint": "pnpm --recursive lint",
    "lint:check": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "format": "prettier --write \"**/*.{js,ts,json,css,scss,vue,html,md}\" --ignore-unknown",
    "format:check": "prettier --check \"**/*.{js,ts,json,css,scss,vue,html,md}\" --ignore-unknown",
    "type-check": "pnpm --recursive type-check",
    "quality:check": "node scripts/quality-check.js",
    "deps:check": "node scripts/dependency-check.js",
    "deps:update": "pnpm update --latest",
    "deps:audit": "pnpm audit --audit-level moderate",
    "icons:generate": "node scripts/icon-generator.js",
    "icons:verify": "node scripts/icon-generator.js --verify-only",
    "assets:optimize": "node scripts/asset-optimizer.js",
    "assets:check": "node scripts/asset-optimizer.js --check-only",
    "security:audit": "node scripts/security-audit.js",
    "security:check": "pnpm security:audit && pnpm deps:audit",
    "perf:analyze": "node scripts/performance-optimizer.js",
    "perf:build-analyze": "pnpm --filter frontend build && pnpm perf:analyze",
    "test:integration": "node scripts/integration-test.js",
    "test:all": "pnpm test:integration && pnpm security:check && pnpm perf:analyze",
    "test:coverage": "pnpm --recursive test:coverage",
    "clean": "pnpm --recursive clean && rimraf dist release node_modules/.cache",
    "prepare": "husky",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up",
    "docker:build": "docker-compose build",
    "migration:generate": "pnpm --filter backend migration:generate",
    "migration:run": "pnpm --filter backend migration:run",
    "migration:revert": "pnpm --filter backend migration:revert",
    "seed": "pnpm --filter backend seed",
    "deploy": "./scripts/deploy-cloudflare.sh prod",
    "electron:serve": "pnpm --filter frontend electron:serve",
    "electron:dev": "pnpm --filter frontend electron:dev",
    "electron:build": "node scripts/build-electron.js",
    "electron:build:mac": "node scripts/build-electron.js mac",
    "electron:build:win": "node scripts/build-electron.js win",
    "electron:build:linux": "node scripts/build-electron.js linux"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix --no-error-on-unmatched-pattern"
    ],
    "*.{css,less,scss}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{json,md}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "9.2.0",
    "cross-env": "7.0.3",
    "electron": "36.4.0",
    "electron-builder": "26.0.12",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.0",
    "rimraf": "6.0.1",
    "typescript": "5.8.3",
    "wait-on": "8.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "got@<11.8.5": ">=11.8.5",
      "postcss@<8.4.31": ">=8.4.31",
      "minimatch@<3.0.5": ">=3.0.5",
      "app-builder-lib@<24.13.2": ">=24.13.2",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "braces@<3.0.3": ">=3.0.3",
      "micromatch@<4.0.8": ">=4.0.8",
      "webpack-dev-server@<=5.2.0": ">=5.2.1",
      "request": "npm:@cypress/request@^3.0.0"
    }
  }
}
